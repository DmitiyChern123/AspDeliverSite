@{
    @using WebApplication1;
    @using WebApplication1.Models;
    <link rel="stylesheet" href="/css/Login.css" />
}
<form method="post" class="login-form" asp-action="NewRegistration">
<h1>Создание аккаунта:</h1>
    <div class="form-input-material">

    <label asp-for="Name" for="Name">Имя:</label>
    <input asp-for="Name" name="Name" />
    <label asp-for="Login" for="Login">Логин:</label>
    <input asp-for="Login" name="Login" />
    <label asp-for="Password" for="password">Пароль:</label>
    <input asp-for="Password" type="Password" name="Password" />
    <label asp-for="RePassword" for="password">повторите Пароль:</label>
    <input asp-for="RePassword" type="Password" name="RePassword" />

   
    <input type="submit" value="Вход в систему" />
    </div>
</form>
